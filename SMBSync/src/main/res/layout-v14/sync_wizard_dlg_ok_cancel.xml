<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="ButtonStyle" >

    <Button
        android:id="@+id/sync_wizard_dlg_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:layout_weight="1.0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/msgs_sync_wizard_cancel_btn" />

    <Button
        android:id="@+id/sync_wizard_dlg_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:layout_weight="1.0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/msgs_sync_wizard_back_btn" />

    <Button
        android:id="@+id/sync_wizard_dlg_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:layout_weight="1.0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/msgs_sync_wizard_next_btn" />

    <Button
        android:id="@+id/sync_wizard_dlg_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_weight="1.0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/msgs_sync_wizard_ok_btn" />

</LinearLayout>