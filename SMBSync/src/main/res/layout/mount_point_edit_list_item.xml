<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ctv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mount_point_edit_list_item_lmp_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:ignore="SpUsage,HardcodedText" >

    <com.sentaroh.android.Utilities.Widget.CustomTextView
        android:id="@+id/mount_point_edit_list_item_lmp_path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:text="a"
        android:textAppearance="?android:attr/textAppearanceLarge"
        ctv:textSize="18dp" />

    <TextView
        android:id="@+id/mount_point_edit_list_item_lmp_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="U"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    
    <CheckBox
        android:id="@+id/mount_point_edit_list_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</LinearLayout>