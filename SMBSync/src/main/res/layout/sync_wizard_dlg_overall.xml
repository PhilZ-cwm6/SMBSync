<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="@string/msgs_sync_wizard_sync_direction"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/sync_wizard_dlg_sync_direction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:minHeight="30dp"
            android:paddingLeft="5dp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="@string/msgs_sync_wizard_title_profname"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
            android:id="@+id/sync_wizard_dlg_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1.0"
            android:ems="10"
            android:hint="@string/msgs_remote_profile_dlg_profile"
            android:inputType="text"
            android:scrollHorizontally="true" />

    </LinearLayout>

    <CheckedTextView
        android:id="@+id/sync_wizard_dlg_ctv_all_files"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center_vertical"
        android:text="@string/msgs_sync_wizard_sync_all_files" 
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    
    <LinearLayout
        android:id="@+id/sync_wizard_dlg_process_files_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <include layout="@layout/divider_line1" />
        
	    <CheckedTextView
	        android:id="@+id/sync_wizard_dlg_overall_ctv_audio"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
	        android:gravity="center_vertical"
	        android:text="@string/msgs_sync_wizard_sync_audio"
	        android:typeface="monospace"  
	        />
	    	    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="5dp"
            android:text="@string/msgs_sync_wizard_sync_desc_file_ext"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="5dp"
            android:text="@string/msgs_sync_wizard_sync_audio_file_ext"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <include layout="@layout/divider_line1" />
        	    	    
	    <CheckedTextView
	        android:id="@+id/sync_wizard_dlg_overall_ctv_image"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
	        android:gravity="center_vertical"
	        android:text="@string/msgs_sync_wizard_sync_image"
	        android:typeface="monospace"  
	        />
	    	    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="5dp"
            android:text="@string/msgs_sync_wizard_sync_desc_file_ext"
            android:textAppearance="?android:attr/textAppearanceMedium" />
	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="5dp"
            android:text="@string/msgs_sync_wizard_sync_image_file_ext"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <include layout="@layout/divider_line1" />

	    <CheckedTextView
	        android:id="@+id/sync_wizard_dlg_overall_ctv_video"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
	        android:gravity="center_vertical"
	        android:text="@string/msgs_sync_wizard_sync_video"
	        android:typeface="monospace"  
	        />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="5dp"
            android:text="@string/msgs_sync_wizard_sync_desc_file_ext"
            android:textAppearance="?android:attr/textAppearanceMedium" />
	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="5dp"
            android:text="@string/msgs_sync_wizard_sync_video_file_ext"
            android:textAppearance="?android:attr/textAppearanceMedium" />
	    	    
    </LinearLayout>
    
</LinearLayout>
