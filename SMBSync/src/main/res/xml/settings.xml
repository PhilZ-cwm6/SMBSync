			android:key="@string/settings_show_sync_on_action_bar"
			android:title="@string/settings_show_sync_on_action_bar_title"
			android:summary="@string/settings_show_sync_on_action_bar_summary_ena" />
	    <CheckBoxPreference
			android:key="@string/settings_use_light_theme"
			android:title="@string/settings_use_light_theme_title"
			android:summary="@string/settings_use_light_theme_summary_ena" />
	    	    	    	    	    
	</PreferenceCategory>	    
	<PreferenceCategory android:title="@string/settings_log_preference_screen_title">
        <ListPreference
			android:key="@string/settings_log_option"
			android:title="@string/settings_log_option_title"
			android:summary="@string/settings_log_option_summary_no" 
			android:dialogTitle="@string/settings_log_option_dialog_title"
			android:entries="@array/settings_log_option_list_entries"
			android:entryValues="@array/settings_log_option_list_values" />
        <ListPreference
			android:key="@string/settings_log_generation"
			android:title="@string/settings_log_generation_title"
			android:summary="@string/settings_log_generation_summary" 
			android:dialogTitle="@string/settings_log_generation_dialog_title"
			android:entries="@array/settings_log_generation_list_entries"
			android:entryValues="@array/settings_log_generation_list_values" />
        <ListPreference
			android:key="@string/settings_log_level"
